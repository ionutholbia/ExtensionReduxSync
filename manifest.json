{
  "manifest_version": 3,
  "name": "ReduxSync",
  "version": "1.0.0",
  "description": "Chrome extension with Redux store synchronization between content scripts and background",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  }
}